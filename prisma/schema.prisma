datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Redirect {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  url       String
  targetUrl String
  ip        String
  geo       String
  hidden    Boolean
  createdAt DateTime @default(now()) @map("created_at")
}

model User {
  id        String     @id @default(auto()) @map("_id") @db.ObjectId
  email     String     @unique
  name      String?
  redirects Redirect[]
}
