datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

model Redirect {
  id        String   @id @default(uuid()) @db.Uuid
  user      User?     @relation(fields: [userId], references: [id])
  userId    String? @db.Uuid
  urlPath       String
  targetUrl String
  ip        String
  // geo       Object?
  hidden    Boolean @default(false)
  createdAt DateTime @default(now()) @map("created_at")
}

model User {
  id        String     @id @default(uuid()) @db.Uuid
  email     String     @unique
  name      String?
  redirects Redirect[]
}
